{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react-jsx",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "allowImportingTsExtensions": false,
    "outDir": "dist"
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
  ],
  "compileOnSave": false
}
